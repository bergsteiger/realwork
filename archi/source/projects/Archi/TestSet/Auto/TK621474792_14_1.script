// Вставка макросов в шаблоны. Первое слово имени саба в ссылающемся топике (%fromsubfname%). Антитест.
USES
	QuickTestsUtils.script
;

Тест TK621474792_14_1
// Первая "подготовительная" часть теста...
	Параметры: (
		"Документ со всеми редакциями"
		"Переходить к метке с номером {(1002)}"
		"Закрывать все окна"
	)
	Выполнить (
		"Открыть редактирование текстового шаблона и выполнить"
			(
				"Набить текст {('%fromsubfname%')}" // макрос
				"Нажать кнопку ОК"
			)
		"Перейти на 'пункт 2' с нажатым Alt - гиперссылка на предыдущую редакцию"
	)

// Вторая проверяющая часть теста...
	Параметры: (
                "Антитест"
		"Документ Конституция"
                "Очищать 'Редактор шаблонов'"
	)
	Выполнить (
		"Вызвать вставку шаблона из меню 'Alt+Ins' и указать номер ссылающегося топика {('10064072')}"
	)

;

TK621474792_14_1
