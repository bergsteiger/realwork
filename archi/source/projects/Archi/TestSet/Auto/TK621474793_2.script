PROCEDURE "Нажать кнопку 'Завершить все'" BOOLEAN IN aLast
	Если ( aLast ) то
	(
		"Контрол по имени {(acCancelButtomInSpelCheckWindow)}" pop:Control:Click  
	)
	иначе 	
	(
		"Контрол по имени {(acSkipAllButtomInSpelCheckWindow)}" pop:Control:Click
	)
;

PROCEDURE "Нажимать кнопку 'Пропустить все' до окончания проверки, затем нажать кнопку 'Завершить'"
	@ ( "Проверка орфографии" ) MODAL ( "Нажать кнопку 'Завершить все'" )
;

