// Проверка добавления слова в словарь

USES
	QuickTestsUtils.script
;

CONST "Добавить в словарь" 'btAddDic'

PROCEDURE "Нажать кнопку 'Добавить в словарь'" BOOLEAN IN aLast
	Если ( aLast ! ) то
	(
		"Контрол по имени {( "Добавить в словарь" )}" pop:Control:Click
		"Контрол по имени {( acCancelButtomInSpelCheckWindow )}" pop:Control:Click
	)
;

PROCEDURE "Закончить проверку после первой найденной ошибки" BOOLEAN IN aLast
	Если ( aLast ! ) то
	(
		"Контрол по имени {( acCancelButtomInSpelCheckWindow )}" pop:Control:Click
	)
;

