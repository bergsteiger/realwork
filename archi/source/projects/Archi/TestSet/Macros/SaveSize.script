
: "Сохранить координаты" IN aForm
	aForm pop:control:Left .
	aForm pop:control:Top .
	aForm pop:control:Width .
	aForm pop:control:Height .
;

/*'Главная форма (X, Y, Width, Height):' .
VAR l_MainForm
push:MainForm >>> l_MainForm
"Сохранить координаты {( l_MainForm )}" */
VAR l_EditorWindow
0 push:MainForm pop:form:MDIChildren >>> l_EditorWindow
/* 'Окно редактора (X, Y, Width, Height):' .
"Сохранить координаты {( l_EditorWindow )}" */
WHILE ( l_EditorWindow pop:Editor:DocumentTailVisible ! )
BEGIN
	cc:NextPage
END


