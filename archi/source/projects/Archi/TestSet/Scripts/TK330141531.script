// Тест с одноразовым вызовом диалога проверки орфографии
USES
	QuickTestsUtils.script
;

INTEGER VAR l_Index
CONST acSkipCount 4

FUNCTION "Округлить координаты" INTEGER IN aValue    
	2 +! aValue
	10 aValue 10 DIV * >>> Result	
;

PROCEDURE "Сохранение положения диалога"  OBJECT IN aSpellCheck
	aSpellCheck "Округлить координаты {( pop:Control:Left )}" .
	aSpellCheck "Округлить координаты {( pop:Control:Top )}" .
;

PROCEDURE SpellNext BOOLEAN IN aLast
 Если ( aLast ! ) то (
	 1 +! l_Index
	 Если ( l_Index МЕНЬШЕ acSkipCount ) то 
	  	( "Контрол по имени {(acSkipButtomInSpelCheckWindow)}" pop:Control:Click )
	 иначе
	  ( 
	   	OBJECT VAR l_SpellCheck
	   	"Контрол по имени {(acSpellCheckDlg)}" >>> l_SpellCheck
	   	"Сохранение положения диалога {(l_SpellCheck)}" 
	  	"Контрол по имени {(acCancelButtomInSpelCheckWindow)}" pop:Control:Click
	  ) 
  )
;  

Тест TK330141531
	Параметры: ( "Размеры для отображения разрыва раздела" )
	Выполнить ( 
		0 >>> l_Index
		@ ( "Проверка орфографии" ) MODAL ( SpellNext )
	)
;

