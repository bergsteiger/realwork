   FILE VAR l_Out
   cOut File:OpenWrite =: l_Out
   TRY
   
   : DoLine W-STRING IN aStr
    aStr l_Out File:WriteWStrLn
   ;
   
   l_In File:ReadLines DoLine
   
   FINALLY
    nil =: l_Out
   END 
  FINALLY 
   nil =: l_In
  END 
  
  cOut '%' tests:CheckEtalon
 ;
 
