: SIGN
    Если ( DUP >0 ) то
     ( 'ПОЛОЖИТЕЛЬНОЕ ЧИСЛО' . DROP )
    иначе
     Если ( =0 ) то
      ( 'НОЛЬ' . )
     иначе
      ( 'ОТРИЦАТЕЛЬНОЕ ЧИСЛО' . )
;

: SIGN1 
   Если ( ?DUP =0 ) то
    ( 'НОЛЬ' . )
   иначе 
    Если ( >0 ) то
     ( 'ПОЛОЖИТЕЛЬНОЕ ЧИСЛО' . ) 
    иначе 
     ( 'ОТРИЦАТЕЛЬНОЕ ЧИСЛО' . )
;

-1 SIGN
0 SIGN
1 SIGN

-1 SIGN1
0 SIGN1
1 SIGN1