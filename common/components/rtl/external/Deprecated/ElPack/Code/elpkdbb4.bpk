VERSION = BCB.04.04
# ---------------------------------------------------------------------------
PROJECT = elpkdbB4.bpl
OBJFILES = Source\ElDBBoxes.obj Source\ElDBBtnEdit.obj Source\ElDBCtrls.obj \
  Source\ElDBCurrEdit.obj Source\ElDBDTPick.obj Source\ElDBHTMLView.obj \
  Source\ElDBLookupCtrls.obj Source\ElDBWideLookupControls.obj \
  Source\ElDBLbl.obj Source\ElDBSpin.obj elpkdbB4.obj \
  Source\ElDBTree.obj Source\ElDBTreeEditors.obj Source\ElDBTreeGrids.obj \
  Source\ElDBConst.obj 
RESFILES = elpkdbB4.res
DEFFILE =
RESDEPEN = $(RESFILES)
LIBFILES =
IDLGENFILES =
IDLFILES =
LIBRARIES =
SPARELIBS = Vcl40.lib
PACKAGES = vclx40.bpi VCL40.bpi VCLDB40.bpi elpackB4.bpi
# ---------------------------------------------------------------------------
PATHCPP = .;
PATHASM = .;
PATHPAS = .;Source
PATHRC = .;
DEBUGLIBPATH = $(BCB)\lib\debug
RELEASELIBPATH = $(BCB)\lib\release
SYSDEFINES = NO_STRICT;_RTLDLL;USEPACKAGES
USERDEFINES =
# ---------------------------------------------------------------------------
CFLAG1 = -Isource;$(BCB)\include;$(BCB)\include\vcl -O2 -Hc -H=$(BCB)\lib\vcl40.csm -w \
  -Ve -Tkh30000 -a8 -4 -k- -vi -D$(SYSDEFINES);$(USERDEFINES) -c -b- -w-par \
  -w-inl -Vx -tWM
CFLAG2 =
CFLAG3 =
IDLCFLAGS = -Isource -I$(BCB)\include -I$(BCB)\include\vcl -src_suffixcpp
PFLAGS = -U$(BCB)\Projects\Lib;source;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) \
  -Isource;$(BCB)\include;$(BCB)\include\vcl -$YD -$L- -$I- -$D- -$C- -v -M -JPHNE
RFLAGS = -isource;$(BCB)\include;$(BCB)\include\vcl
AFLAGS = /isource /i$(BCB)\include /i$(BCB)\include\vcl /mx /w2 /zn /d_RTLDLL \
  /dUSEPACKAGES
LFLAGS = -L$(BCB)\Projects\Lib;source;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) -l \
  -D"EldoS DB-Aware Controls" -aa -Tpp -Gpr -x -Gn -Gl -Gi
IFLAGS =
# ---------------------------------------------------------------------------
ALLOBJ = c0pkg32.obj Memmgr.Lib $(PACKAGES) sysinit.obj $(OBJFILES)
ALLRES = $(RESFILES)
ALLLIB = $(LIBFILES) $(LIBRARIES) import32.lib cp32mti.lib
