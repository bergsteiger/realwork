  Rxslider.obj Rxclock.obj Animate.obj Rxspin.obj RxRichEd.obj Rxswitch.obj \
  Rxdice.obj ClipMon.obj Vclutils.obj Anifile.obj Icolist.obj Objstr.obj \
  Rxcombos.obj Pickdate.obj Maxmin.obj Rxconst.obj Rxcconst.obj Apputils.obj \
  Strutils.obj Fileutil.obj Rxtimer.obj Rxhook.obj Placemnt.obj Rxprops.obj \
  Rxprgrss.obj Rxhints.obj Rxcalc.obj Boxprocs.obj Clipicon.obj Rxgraph.obj \
  PicClip.obj DualList.obj FDualLst.obj ClipView.obj Speedbar.obj SbSetup.obj \
  PageMngr.obj MrgMngr.obj StrHlder.obj AppEvent.obj TimerLst.obj MRUList.obj \
  RxIni.obj RxShell.obj Parsing.obj RxMenus.obj RxNotify.obj RxGrdCpt.obj \
  SplshWnd.obj DataConv.obj RxTConst.obj Ole2Auto.obj RxVerInf.obj ExcptDlg.obj \
  Str16.obj Rxgconst.obj Rxgif.obj Gifctrl.obj rxctl4.obj rrxcombo.obj
RESFILES =
DEFFILE =
RESDEPEN = $(RESFILES)
LIBFILES =
IDLGENFILES =
IDLFILES =
LIBRARIES =
SPARELIBS = vcl40.lib vclx40.lib
PACKAGES = vcl40.bpi vclx40.bpi
# ---------------------------------------------------------------------------
PATHCPP = .;
PATHASM = .;
PATHPAS = .;
PATHRC = .;
DEBUGLIBPATH = $(BCB)\lib\debug
RELEASELIBPATH = $(BCB)\lib\release
SYSDEFINES = NO_STRICT;_RTLDLL;USEPACKAGES
USERDEFINES =
# ---------------------------------------------------------------------------
CFLAG1 = -I$(BCB)\include;$(BCB)\include\vcl;$(BCB)\rx\units -O2 -Hc \
  -H=$(BCB)\lib\vcl40.csm -w- -Ve -Tkh30000 -a8 -k- -vi \
  -D$(SYSDEFINES);$(USERDEFINES) -c -b- -w-par -w-inl -Vx
CFLAG2 =
CFLAG3 =
IDLCFLAGS = -src_suffixcpp -I$(BCB)\include -I$(BCB)\include\vcl -I$(BCB)\rx\units
PFLAGS = -U$(BCB)\lib\release;$(BCB)\lib\obj;$(BCB)\lib;$(BCB)\rx\units;$(RELEASELIBPATH) \
  -I$(BCB)\include;$(BCB)\include\vcl;$(BCB)\rx\units -$YD -$V- -$L- -$D- -v -M \
  -JPHNE
RFLAGS = -i$(BCB)\include;$(BCB)\include\vcl;$(BCB)\rx\units
AFLAGS = /i$(BCB)\include /i$(BCB)\include\vcl /i$(BCB)\rx\units /mx /w2 /zn /d_RTLDLL \
  /dUSEPACKAGES
LFLAGS = -L$(BCB)\lib\release;$(BCB)\lib\obj;$(BCB)\lib;$(BCB)\rx\units;$(RELEASELIBPATH) \
  -D"RX Library Controls and Tools Package" -aa -Tpp -Gpr -x -Gn -Gl -Gi
IFLAGS =
# ---------------------------------------------------------------------------
ALLOBJ = c0pkg32.obj Memmgr.Lib $(PACKAGES) sysinit.obj $(OBJFILES)
ALLRES = $(RESFILES)
ALLLIB = $(LIBFILES) $(LIBRARIES) import32.lib cp32mti.lib
