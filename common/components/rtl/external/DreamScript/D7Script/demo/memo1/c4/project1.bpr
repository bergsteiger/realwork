# ---------------------------------------------------------------------------
!if !$d(BCB)
BCB = $(MAKEDIR)\..
!endif

# ---------------------------------------------------------------------------
# IDE SECTION
# ---------------------------------------------------------------------------
# The following section of the project makefile is managed by the BCB IDE.
# It is recommended to use the IDE to change any of the values in this
# section.
# ---------------------------------------------------------------------------

VERSION = BCB.04.04
# ---------------------------------------------------------------------------
PROJECT = Project1.exe
OBJFILES = ..\Unit1.obj Project1.obj
RESFILES = Project1.res
DEFFILE =
RESDEPEN = $(RESFILES) ..\Unit1.dfm
LIBFILES =
LIBRARIES = qrpt40.lib vcldbx40.lib vclx40.lib vcldb40.lib vcl40.lib
SPARELIBS = vcl40.lib vcldb40.lib vclx40.lib vcldbx40.lib qrpt40.lib
PACKAGES =
# ---------------------------------------------------------------------------
PATHCPP = .;
PATHASM = .;
PATHRC = .;
PATHPAS = .;..
RELEASELIBPATH = $(BCB)\lib\release
SYSDEFINES = NO_STRICT
USERDEFINES =
# ---------------------------------------------------------------------------
CFLAG1 = -I..\;$(BCB)\include;$(BCB)\include\vcl;..\..\..\units;..\..\..\imported;..\..\..\vclreg \
  -Od -w -Ve -Tkh30000 -a8 -k- -vi -D$(SYSDEFINES);$(USERDEFINES) -c -b- -w-par \
  -w-inl -Vx -tW -tWM
CFLAG2 =
CFLAG3 =
PFLAGS = -U..\;$(BCB)\lib\obj;$(BCB)\lib;..\..\..\units;..\..\..\imported;..\..\..\vclreg;$(RELEASELIBPATH) \
  -I..\;$(BCB)\include;$(BCB)\include\vcl;..\..\..\units;..\..\..\imported;..\..\..\vclreg \
  -$YD -$L- -$D- -v -M -JPHNE
RFLAGS = -i..\;$(BCB)\include;$(BCB)\include\vcl;..\..\..\units;..\..\..\imported;..\..\..\vclreg
AFLAGS = /i$(BCB)\include /i$(BCB)\include\vcl /i..\..\..\units /i..\..\..\imported \
  /i..\..\..\vclreg /mx /w2 /zn
LFLAGS = -L..\;$(BCB)\lib\obj;$(BCB)\lib;..\..\..\units;..\..\..\imported;..\..\..\vclreg;$(RELEASELIBPATH) \
  -aa -Tpe -x -Gn
IFLAGS =
# ---------------------------------------------------------------------------
ALLOBJ = c0w32.obj sysinit.obj $(OBJFILES)
ALLRES = $(RESFILES)
ALLLIB = $(LIBFILES) $(LIBRARIES) import32.lib cp32mt.lib
# ---------------------------------------------------------------------------
