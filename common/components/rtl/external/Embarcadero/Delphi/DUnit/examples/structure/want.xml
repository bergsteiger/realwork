<project name="dunit.examples"
  default="compile" 
  basedir=".">
 
  <target name="compile" >
    <dcc basedir="diffunit"
	      source="*.dpr"
         dcuoutput="${scratch.dir}"
         exeoutput="${bin.dir}"
         debug="true"
         build="true"
    >
      <unitpath path="${src.dir}" />
      <resourcepath path="${src.dir}" />
    </dcc>
    <dcc basedir="sameunit"
	      source="*.dpr"
         dcuoutput="${scratch.dir}"
         exeoutput="${bin.dir}"
         debug="true"
         build="true"
         >
      <unitpath path="${src.dir}" />
      <resourcepath path="${src.dir}" />
    </dcc>
    <dcc basedir="sameunit"
	      source="*.dpr"
         dcuoutput="${scratch.dir}"
         exeoutput="${bin.dir}"
         debug="true"
         build="true"
         >
      <define name="TESTING" />    
      <unitpath path="${src.dir}" />
      <resourcepath path="${src.dir}" />
    </dcc>
  </target>

</project>
