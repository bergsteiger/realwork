USES
 axiom:Component
 axiom:Control
 axiom:Font
 axiom:Editor
 
 WordsTranslation.script
 @\SysUtils.script
;

PROCEDURE "Убедиться, что фокус в редакторе"
 OBJECT VAR l_Control
 focused:control:push =: l_Control
 l_Control ЯВЛЯЕТСЯ class::TevCustomEditorWindow ?ASSURE
  [ 'Фокус не в редакторе, а в ' l_Control pop:Component:Name ':' l_Control pop:object:ClassName ]
;

PROCEDURE "Сравнить выделенный текст редактора с эталоном" OBJECT IN anEditor
 STRING VAR "Выделенный текст"
 "Убедиться, что фокус в редакторе"
 anEditor pop:editor:GetSelectionText "Заменить непечатаемые символы" =: "Выделенный текст"
 "Выделенный текст" .
; // "Сравнить выделенный текст редактора с эталоном"

STRING FUNCTION "Выделенный текст текущего редактора"
 "Убедиться, что фокус в редакторе"
 Result := ( "Контрол в фокусе" pop:editor:GetSelectionText "Заменить непечатаемые символы" ) 
;

PROCEDURE "Сравнить выделенный текст текущего редактора с эталоном"
 "Убедиться, что фокус в редакторе"
 "Сравнить выделенный текст редактора {(focused:control:push)} с эталоном"
; // "Сравнить выделенный текст текущего редактора с эталоном"

WordAlias "Шрифт контрола" pop:Control:Font
WordAlias "Цвет фона" Font:BackColor
WordAlias "Размер шрифта" Font:Size
WordAlias "Название шрифта" Font:Name
WordAlias "Цвет шрифта" Font:Color
WordAlias "Наклонный шрифт?" Font:IsItalic
WordAlias "Жирный шрифт?" Font:IsBold
WordAlias "Подчеркнутый шрифт?" Font:IsUnderline
