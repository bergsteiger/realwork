USES
 axiom:форма
 
 WordsTranslation.script
 @\SysUtils.script
 @\Controls.script
 @\Forms.script
;

OBJECT FUNCTION "Главное окно"
 OBJECT VAR MainWindow
 "Найти окно по имени {(форма::MainWindow)}" =: MainWindow
 Если ( HasTabs ) то (
  MainWindow pop:Control:GetAnotherParentForm =: MainWindow )
 MainWindow =: Result
;

OBJECT FUNCTION "Текущая активная вкладка"
 "Найти окно по имени {(форма::MainWindow)}" =: Result
;

OBJECT FUNCTION "Найти главное окно для контрола" OBJECT IN "Контрол"
 "Найти окно по имени {(форма::MainWindow)} для контрола {("Контрол")}" =: Result
;

OBJECT FUNCTION "Форма БП"
 ANYUSERTYPE форма::NewBaseSearch vcm:FindForm ?ASSURE 'Не нашли форму БП!'
 >>> Result
; // "Форма БП"

