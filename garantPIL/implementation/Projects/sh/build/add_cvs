#!/bin/sh

if test "$1" = "" ; then
echo "Usage: add_cvs <file_name_rel_cvsmod> [<cvs_mod>]"
exit
fi

if test "$MPCXC_ROOT" = ""; then
echo "You must export MPCXC_ROOT env to point to the root of your Multi Platform Common eXtra Code."
exit
fi

file_name=$1
cvs_mod=$2

echo "add_cvs: $file_name"

if test "$cvs_mod" = "" ; then
cvs_mod="garantPIL"
fi

tmp_curdir=$PWD

cd $MPCXC_ROOT/src/$cvs_mod

export CVSROOT=":pserver:$MPCXC_CVS_USER@developer.garant.ru/export/home/cvs"

cvs add $file_name

cd $tmp_curdir

echo "end."


