#!/bin/sh

if test "$1" = "" ; then
echo "Usage: commit_cvs <file_name>"
exit
fi

if test "$MPCXC_ROOT" = ""; then
echo "You must export MPCXC_ROOT env to point to the root of your Multi Platform Common eXtra Code."
exit
fi

file_name=$1

echo "commit_cvs: $file_name"

tmp_curdir=$PWD
cd $MPCXC_ROOT

export CVSROOT=":pserver:$MPCXC_CVS_USER@developer.garant.ru/export/home/cvs"
export CVSEDITOR="joe"
export EDITOR="joe"

cvs commit $file_name

cd $tmp_curdir

echo "end."

