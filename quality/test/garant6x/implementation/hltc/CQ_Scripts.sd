procedure CQ_22686;
const
  DOC_NUM = 10003000;
var
  i: integer;
  document;
  tempTimeOut;
begin
try
  Runner.CallMethod('Main.InitOptions');
  if NOT OpenDocByNumber(DOC_NUM) then Raise('Не удалось открыть документ по Alt+N');
  document := GetFromEditor('ТЕКСТ ДОКУМЕНТА');  
  document.SetFocus;
  tempTimeOut := Options.Run.Delay;
  Options.Run.Delay := 0;
  for i := 1 to 100 do
  begin
    PressKeyNCount('![Down]', 3);
    PressKeyNCount('^l', 3);
    Sys.Keys('[Esc]');
    PressKeyNCount('[Down]', 3);
  end;  
  Options.Run.Delay := tempTimeOut;
except
  Log.Message('CQ_22686: ' + ExceptionMessage, '',  pmNormal, GetLogAttr('EXCEPTION')); 
end;  
end;

