procedure CQ_21529;
var
  i: integer;
begin
try
  if NOT GoToPPR then Raise('Не удалось перейти в ППР');
  Sys.Keys('^[Enter]');
  Delay(Options.Run.Timeout div 30);
  Sys.Keys('[Enter]');
  for i := 1 to 300 do
    Sys.Keys('^[Right]');
except
  Log.Message('CQ_21529: ' + ExceptionMessage, '',  pmNormal, GetLogAttr('EXCEPTION')); 
end;  
end;
