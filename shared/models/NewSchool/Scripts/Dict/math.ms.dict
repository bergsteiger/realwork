USES
 core.ms.dict
;

BOOLEAN FUNCTION IsEven
 INTEGER IN aValue
 aValue 2 MOD 0 == >>> Result
; // IsEven

BOOLEAN FUNCTION IsOdd
 INTEGER IN aValue
 aValue IsEven ! >>> Result
; // IsOdd

INTEGER FUNCTION Inc1
 INTEGER IN aValue
 aValue 1 + >>> Result
; // Inc1

INTEGER FUNCTION Dec1
 INTEGER IN aValue
 aValue 1 - >>> Result
; // Dec1

INTEGER FUNCTION IncWith
 INTEGER IN aValue
 ^ IN anInc
 aValue anInc DO + >>> Result
; // Inc1

INTEGER FUNCTION DecWith
 INTEGER IN aValue
 ^ IN aDec
 aValue aDec DO - >>> Result
; // Dec1